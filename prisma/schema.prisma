generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  contact    String?
  razorpayId String? 
  createdAt  DateTime @default(now())

  subscriptions Subscription[]
}

model Subscription {
  id                   String   @id @default(cuid())
  razorpaySubscription String   @unique
  product              String
  frequency             String
  status               String
  planId               String

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  createdAt   DateTime @default(now())
  cancelledAt DateTime?
}
